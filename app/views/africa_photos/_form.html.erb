<%= form_for(@africa_photo) do |f| %>
  <div class="field">
    <%= f.label :image %><br />
    <%= f.text_field :image %>
  </div>

  <div class="field">
    <%= f.label :caption %><br />
    <%= f.text_area :caption %>
  </div>

  <div class="field">
    <%= f.label :country %><br />
    <%= f.text_area :country %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :date %><br />
    <%= f.text_area :date %>
  </div>

  <div class="field">
    <%= f.label :order %><br />
    <%= f.text_area :order %>
  </div>

  <div class="actions">
    <%= f.submit "Save Photo" %>
  </div>
  <% end %>
